<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="view_product_tms_sale_form" model="ir.ui.view">
			<field name="name">product.template.tms_sale.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
				<group name="group_standard_price" position="after">
					<group name="TMS">
						<field name="is_translation_service" attrs="{'invisible':[('type','!=','service')]}" />
						<field name="translation_service_type" attrs="{'invisible':[('is_translation_service','!=',True)]}" widget="radio"/>
						<field name="group_sol" attrs="{'invisible':[('is_translation_service','=',False)]}" />
						<field name="grouped_product" domain="[('id','!=',id)]" attrs="{'invisible':[('group_sol','=',False)], 'required':[('group_sol','=',True)]}" />
					</group>
				</group>
			</field>
		</record>
</odoo>